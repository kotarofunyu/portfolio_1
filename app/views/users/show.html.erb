<div class="user">
    <div class="wrapper">
        <div class="user_info">
            <h1>ユーザー基本情報</h1>
            <%= image_tag @user.picture.url if @user.picture? %>
            <%= image_tag ('noicon.png') if @user.picture.blank? %>
            <% if logged_in && current_user.id === @user.id %>
            <% if @user.picture? %>
            <dl>
                <dt>プロフィール画像を変更する</dt>
                <dd>
                    <%= form_for(@user,:url => {:controller => :users, :action => :update }) do |f| %>
                    <%= f.file_field :picture, class: "register_profile_image" %>
                    <%= f.submit "変更する", class: "register_button" %>
                    <% end %>
                </dd>
            </dl>
            <% else %>
            <dl>
                <dt>プロフィール画像を登録する</dt>
                <dd>
                    <%= form_for(@user,:url => {:controller => :users, :action => :update }) do |f| %>
                    <%= f.file_field :picture, class: "register_profile_image" %>
                    <%= f.submit "登録する", class: "register_button" %>
                    <% end %>
                </dd>
            </dl>
            <% end %>
            <% end %>
            <dl>
                <dt>
                    ユーザー名
                </dt>
                <dd>
                    <%= @user.name %>
                </dd>
            </dl>
            <dl>
                <dt>
                    メールアドレス
                </dt>
                <dd>
                    <%= @user.email %>
                </dd>
            </dl>
            <dl>
                <dt>
                    プロフィール
                </dt>
                <dd>
                    <%= @user.introduction if @user.introduction? %>

                    <% if logged_in && current_user.id === @user.id %>
                    <% if@user.introduction.present? %>
                        <%= form_for(@user,:url => {:controller => :users, :action => :update }) do |f| %>
                            <%= f.text_area :introduction, class: "register_introduction" %>
                            <%= f.submit "変更する", class: "register_button" %>
                        <% end %>
                        <% else %>
                        <p>プロフィールを登録する</p>
                        <%= form_for(@user,:url => {:controller => :users, :action => :update }) do |f| %>
                        <%= f.text_area :introduction, class: "register_introduction" %>
                        <%= f.submit "登録する", class: "register_button" %>
                        <% end %>
                        <% end %>
                    <% end %>
                </dd>
            </dl>
        </div>
        <div class="user_trainingrecord">
            <h1><%= @user.name %>の記録一覧</h1>
            <ul>
                <%= render partial: 'record', collection: @records %>
            </ul>
        </div>
    </div>
</div>