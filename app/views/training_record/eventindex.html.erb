<div class="wrapper event_index">
    <% if @records.present? %>
    <ul>
        <% @records.each do |record| %>
        <li>
            <%=link_to "#{record.name}","/users/events/?user_id=#{@user_params}&event_name=#{record.name}"%>
        </li>
        <% end %>
    </ul>

    <% else %>
    <p>
        まだ種目はないようです。
        <%=link_to "登録しませんか？", "/records/" %>
    </p>
    <% end %>
</div>