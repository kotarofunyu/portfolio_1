<div class="record_detail">
    <h1><%= @record.created_at %>の記録</h1>
    <%= @record.event.each do |item| %>
    <dl>
        <dt>対象部位</dt>
        <dd><%= item.part %></dd>
    </dl>
    <dl>
        <dt>種目</dt>
        <dd><%= item.name %></dd>
    </dl>
    <dl>
        <dt>重量</dt>
        <dd><%= item.weight %>kg</dd>
    </dl>
    <dl>
        <dt>回数</dt>
        <dd><%= item.rep %>レップ</dd>
    </dl>
    <dl>
        <dt>セット数</dt>
        <dd><%= item.set %>セット</dd>
    </dl>
    <% end %>
    <dl>
        <dt>コメント</dt>
        <dd><%= @record.comment %></dd>
    </dl>
    <%= image_tag @record.picture.url if @record.picture? %>
    <%= link_to "削除する", "/records/#{@record.id}", method: :delete, data: { confirm: "本当に削除しますか？"} %>
</div>